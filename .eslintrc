extends:
  - eslint:recommended
  - plugin:vue/recommended
  - plugin:require-path-exists/recommended
plugins:
  - require-path-exists
rules:
  vue/v-bind-style: 2
  vue/v-on-style: 2
  vue/html-quotes: [2, 'double']
  require-path-exists/exists:
    - 2
    - webpackConfigPath: webpack.config.js
env:
  browser: true
  commonjs: true
  jquery: true
globals:
  Promise: true
