<div class="image_dropzone" id="{{selector}}">
    <div class="img-wrapper">
        <!-- /*<div class="dz-placeholder" id="{{selector}}_placeholder" style="background-image:url('{{picture}}')"></div>*/ -->
        <img class="dz-placeholder" id="{{selector}}_placeholder" src="{{picture}}"/>
    </div>
    <div class="finished_area">
        <div class="image_options text-center">
            {{#if cropping}}
                <span class="image_option croppie_option glyphicon glyphicon-ban-circle cancel_image" aria-hidden="true" title="{{formatMessage (intlGet 'messages.cancel_thumbnail')}}"></span>
                <span class="image_option croppie_option glyphicon glyphicon-ok submit_image" aria-hidden="true" title="{{formatMessage (intlGet 'messages.submit_thumbnail')}}"></span>
            {{else}}
                <span id="{{selector}}_swap" class="image_option thumbnail_option glyphicon glyphicon-picture" aria-hidden="true" title="{{formatMessage (intlGet 'messages.upload_thumbnail')}}"></span>
                {{#if show_crop}}<span class="image_option thumbnail_option glyphicon glyphicon-screenshot crop_image" aria-hidden="true" title="{{formatMessage (intlGet 'messages.recenter_thumbnail')}}"></span>{{/if}}
                {{#if show_generate}}<span class="image_option thumbnail_option glyphicon glyphicon-random open_thumbnail_generator" aria-hidden="true" title="{{formatMessage (intlGet 'messages.generate_thumbnail')}}"></span>
                {{/if}}
                {{#if show_crop}}<span class="image_option thumbnail_option glyphicon glyphicon-remove remove_image" aria-hidden="true" title="{{formatMessage (intlGet 'messages.remove_thumbnail')}}"></span>{{/if}}
            {{/if}}
        </div>
    </div>
</div>
