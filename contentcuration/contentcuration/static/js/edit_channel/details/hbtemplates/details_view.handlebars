            <div class="col-sm-3 title">
                {{formatMessage (intlGet 'messages.languages')}}
            </div>
            <div class="col-sm-9 field">
                {{#if details.languages}}{{{join details.languages ", "}}}{{else}} --- {{/if}}</div>
        </div>
        <div class="row info-row">
            <div class="col-sm-3 title">
                {{formatMessage (intlGet 'messages.tags')}}
            </div>
            <div class="col-sm-9 field">
                {{#if details.tags}}
                    {{#each details.tags}}
                        <div class="tag">{{this}}</div>
                    {{/each}}
                {{else}} --- {{/if}}
            </div>
        </div>
        <div class="row info-row">
            <div class="col-sm-3 title">
                {{formatMessage (intlGet 'messages.sample_pathway')}}
            </div>
            <div class="col-sm-9 field pathway">
                {{#if details.sample_pathway}}
                    {{#each details.sample_pathway}}
                        <a href="/channels/{{../channel_id}}/view/{{node_id}}" target="_blank">{{title}}</a>
                    {{#unless @last}} <i class="material-icons">arrow_forward</i>{{/unless}}
                    {{/each}}
                {{else}} --- {{/if}}
            </div>
        </div>
    </div>
</div>
