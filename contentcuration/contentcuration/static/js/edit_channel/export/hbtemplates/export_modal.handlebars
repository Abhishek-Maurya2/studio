<div class="modal fade" id="export_modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content modal-dialog-default" id="export_modal_content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title truncate">{{formatMessage (intlGet 'messages.publishing_channel')}}</h4>
            </div>
            <div class="modal-body">
                <div id="export_area">
                    <h3 class="export_channel_name truncate" title="{{channel.name}}">{{channel.name}}</h3>
                    <em >{{formatMessage (intlGet 'messages.publish_id')}} {{channel.id}}</em>
                    <em class="pull-right" id="version_number">{{formatMessage (intlGet 'messages.current_version')}} {{version}}</em>
                    <hr/>
                    <p>{{formatMessage (intlGet 'messages.publish_text')}}</p>
                    <div id="export_preview" class="modal-content-default"></div>
                    <div id="export_buttons" class="modal-bottom-content-default">
                        <button class="action-button pull-right modal-main-action-button" id="publish_btn">
                            <span>{{formatMessage (intlGet 'messages.publish')}}</span>
                        </button>
                        <span id="export_totals" class="pull-right modal-status-text">
                            {{formatMessage (intlGet 'messages.resource_count') count=resource_count}}
                            <em class="annotation" id="export_size">{{formatMessage (intlGet 'messages.calculating')}}</em>
                        </span>
                        <a class="action-text" data-dismiss="modal">
                            <span>{{formatMessage (intlGet 'messages.cancel')}}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
