<div class="input-tab-control tab_item" data-next=".file-upload-cancel"></div>
<div class="pull-right" id="show_uploading_wrapper">
	<input type="checkbox" id="show_uploading"/> <label for="show_uploading">{{formatMessage (intlGet 'messages.uploading_only')}}</label>
</div>
<button class="btn btn-default fileinput-button dz-clickable action-button tab_item">{{formatMessage (intlGet 'messages.add_files_action')}}</button>
<em>&nbsp; {{formatMessage (intlGet 'messages.drag_text')}}</em>
<div id="file_upload_count">{{formatMessage (intlGet 'messages.upload_count') data=0 }}</div>
<div id="dropzone" class="file_list">
	<ul id="file_upload_list" class="list-unstyled">
		<li class="default-item text-center">{{formatMessage (intlGet 'messages.loading')}}</li>
	</ul>
</div>