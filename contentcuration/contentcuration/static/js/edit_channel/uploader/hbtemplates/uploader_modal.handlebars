<div class="modal fade" id="uploaderModal"  tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content upload-modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title truncate">
          {{#if new_content}}
            <span class="glyphicon glyphicon-plus pull-left" aria-hidden="true"></span>
            Adding Topics to {{title}}
          {{else}}
            <span class="glyphicon glyphicon-pencil pull-left" aria-hidden="true"></span>
            Editing Content Details
          {{/if}}
        </h4>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>