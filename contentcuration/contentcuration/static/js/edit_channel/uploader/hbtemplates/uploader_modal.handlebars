<div class="modal fade" id="uploaderModal"  tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content upload-modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title truncate">
          {{#if new_content}}
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            &nbsp; {{#if new_topic}}{{formatMessage (intlGet 'messages.adding_topics') title=title}}{{else}}{{formatMessage (intlGet 'messages.adding_exercise') title=title}}{{/if}}
          {{else}}
            {{#if allow_edit}}
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              &nbsp; {{formatMessage (intlGet 'messages.editing_content')}}
            {{else}}
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
              &nbsp; {{formatMessage (intlGet 'messages.viewing_content')}}
            {{/if}}
          {{/if}}
        </h4>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>
