<input type="checkbox" id="queue_file_{{node.id}}"></input>
<label for="queue_file_{{node.id}}" class="queue_item">
	<div class="pull-right queue-options">
		{{#if is_clipboard}}<span class="edit_content glyphicon glyphicon-pencil" aria-hidden="true"></span>{{/if}}
		<span class="delete_content glyphicon glyphicon-trash" aria-hidden="true"></span>
	</div>
	{{#if isfolder}}<div class="pull-left tog_folder"><span id="menu_toggle_{{node.id}}" class="glyphicon glyphicon-menu-up"></span></div>{{/if}}
	<!--<span class="glyphicon glyphicon-{{file_icon}}"></span>-->
	<h6>{{to_upper_case node.kind}}</h6>
	<h4><div class="queue_item_title title truncate" title="{{node.title}}">{{node.title}}</div>{{#if isfolder}}<div class="badge clipboard-topic-count">{{node.metadata.resource_count}}</div>{{/if}}</h4>
</label>
{{#if isfolder}}<div id="{{node.id}}_sub" class="subdirectory wrapper"></div>{{/if}}