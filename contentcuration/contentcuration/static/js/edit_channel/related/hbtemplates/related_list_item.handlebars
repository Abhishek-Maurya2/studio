<div class="select_item_wrapper">
	{{#if isfolder}}
		<img src="/static/img/topic.png" class="select_topic_img">
	{{else}}
		<input type="checkbox" id="select_item_{{node.id}}_check" class="select_checkbox" {{#if checked}}checked{{/if}} {{#if isinvalid}}disabled title="Cannot select this item"{{/if}}></input>
	{{/if}}
	<label for="select_item_{{node.id}}_check" class="select_item {{#if node.children}}tog_folder{{/if}} {{#if isinvalid}}disabled{{/if}}" {{#if isinvalid}}disabled{{/if}}  title="{{node.title}}">
		{{#unless isfolder}}<div class="glyphicon glyphicon-{{#get_icon node.kind}}{{/get_icon}}"></div>{{/unless}}
		<div class="select_item_title truncate">{{node.title}}</div>
		{{#if isfolder}}
			{{#if node.children}}
				{{#if isfolder}}
					{{#unless is_channel}}<em class="select_metadata">{{#format_count "Resource" node.metadata.resource_count}}{{/format_count}}</em>{{/unless}}
				{{else}}
					<em class="select_metadata">{{#format_file_size node.metadata.resource_size}}{{/format_file_size}}</em>
				{{/if}}
				<div id="menu_toggle_{{node.id}}" class="toggler glyphicon glyphicon-triangle-top"></div>
			{{else}}
				<em class="select_metadata">(empty)</em>
			{{/if}}
		{{/if}}
		{{#if isfolder}}<i class="badge selected_counter" id="select_item_{{node.id}}_count">{{node.metadata.resource_count}}</i>{{/if}}
		{{#if is_channel}}<i class="badge selected_counter" id="select_item_{{node.id}}_count">{{node.metadata.resource_count}}</i>{{/if}}
		{{#if is_selected}}[SELECTED]{{/if}}
		{{#unless checked}}{{#if is_dependent}}[IN POSTREQUISITES]{{/if}}{{/unless}}
		{{#if is_prerequisite}}
			<a class="prerequisite_label action-text">âœ” IN PREREQUISITE TREE</a>
		{{/if}}
	</label>
</div>
{{#if isfolder}}<div id="select_item_{{node.id}}_sub" class="subdirectory"><em class="default-item">Loading...</em></div>{{/if}}
