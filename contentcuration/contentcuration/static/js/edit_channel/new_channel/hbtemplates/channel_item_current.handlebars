<div class="input-tab-control tab_item" data-next=".save_channel"></div>
<div class="channel-container-wrapper {{#unless edit}}open_channel{{/unless}}">
	<div class="profile pull-left text-center">
		{{#if edit}}
			<div class="new_channel_pic"></div>
		{{else}}
			{{#if picture}}
				<img class="channel_pic" alt="{{channel.name}} logo" src="{{picture}}"/>
			{{/if}}
		{{/if}}
	</div>
	{{#if edit}}
		<p id="channel_name_error">{{formatMessage (intlGet 'messages.channel_name_error')}}</p>
		<input type="text" id="new_channel_name" placeholder="{{formatMessage (intlGet 'messages.name_placeholder')}}" value="{{channel.name}}" maxlength="200" class="tab_item first_focus_item"></input>
		<textarea id="new_channel_description" placeholder="{{formatMessage (intlGet 'messages.description_placeholder')}}" value="{{channel.description}}"  maxlength="400" class="tab_item">{{channel.description}}</textarea>
		<a class="delete_channel">{{formatMessage (intlGet 'messages.delete_channel')}}</a>
		<div class="channel_options">
			<button class="save_channel btn pull-right tab_item">{{formatMessage (intlGet 'messages.save_channel')}}</button>
			<button class="channel_toggle action-text pull-right tab_item">{{formatMessage (intlGet 'messages.cancel')}}</button>
		</div>
	{{else}}
		<span class="channel_metadata">
			<span class="resource_count">{{formatMessage (intlGet 'messages.resource_count') count=resource_count}}</span>
			&nbsp;&nbsp;{{formatMessage (intlGet 'messages.channel_id')}}
			{{#if channel.published}}
				<input type="text" class="copy-id-text text-center" value="{{channel.id}}" readonly size='30'/>
				<span class="glyphicon glyphicon-copy copy-id-btn" aria-hidden="true" title="{{formatMessage (intlGet 'messages.copy_id')}}"></span>
			{{else}}<em>({{formatMessage (intlGet 'messages.unpublished')}})</em>
			{{/if}}
			{{#if channel.view_only}}
				<b class="pull-right">&nbsp;{{formatMessage (intlGet 'messages.view_only')}}</b>
			{{/if}}
		</span>
		<h4>
			{{#unless channel.view_only}}
				<span class="edit_channel disable-on-edit glyphicon glyphicon-pencil pull-right"></span>
			{{/unless}}
			<p class="truncate channel_name" title="{{channel.name}}">{{channel.name}}</p>
		</h4>
		<div class="description">
			<p id="channel_description" class="wordwrap" title="{{channel.description}}">{{channel.description}}</p>
		</div>
		<div class="tag_area">
			<ul class="list-unstyle list-inline">
			{{#each tag_list}}
				<li>{{name}}</li>
			{{/each}}
			</ul>
		</div>
	{{/if}}
</div>
<div class="input-tab-control tab_item" data-next="#new_channel_name"></div>