<div id={{#if is_clipboard}}"clipboard"{{else}}{{#if edit}}"edit"{{else}}"preview"{{/if}}{{/if}}>
	<nav id="button_bar">
		{{#if staging}}
		<a href="/channels/{{channel.id}}/{{#if view_only}}view{{else}}edit{{/if}}">
		<div class="nav-button-container">
			<div class="nav-button disable-on-edit"><span class="glyphicon glyphicon-arrow-left"></span></div>
			<a class="nav-label review_button disable-on-edit">Back</a>
		</div></a>
		{{/if}}
		<div id="disable-none-selected-wrapper">
			{{#if edit}}
				<div class="nav-button-container">
					<div class="nav-button edit_button disable-on-edit disable-none-selected"><span class="glyphicon glyphicon-pencil"></span></div>
					<a class="nav-label edit_button disable-on-edit disable-none-selected">Edit</a>
				</div>
			{{else}}
				<div class="nav-button-container">
					<div class="nav-button edit_button disable-on-edit disable-none-selected"><span class="glyphicon glyphicon-new-window"></span></div>
					<a class="nav-label edit_button disable-on-edit disable-none-selected">View</a>
				</div>
			{{/if}}
			{{#unless staging}}
				<div class="nav-button-container">
					<div class="nav-button copy_button disable-on-edit disable-none-selected"><span class="glyphicon glyphicon-duplicate"></span></div>
					<a class="nav-label copy_button disable-on-edit disable-none-selected">Copy</a>
				</div>
			{{/unless}}
			{{#if edit}}
				<div class="nav-button-container">
					<div class="nav-button move_button disable-on-edit disable-none-selected"><span class="glyphicon glyphicon-move"></span></div>
					<a class="nav-label move_button disable-on-edit disable-none-selected">Move</a>
				</div>
				<div class="nav-button-container">
					<div class="nav-button delete_button disable-on-edit disable-none-selected"><span class="glyphicon glyphicon-remove"></span></div>
					<a class="nav-label delete_button disable-on-edit disable-none-selected">Delete</a>
				</div>
			{{/if}}
		</div>
		{{#if edit}}
		<div class="nav-button-container">
			<div class="nav-button archive_button disable-on-edit"><span class="glyphicon glyphicon-trash"></span></div>
			<a class="nav-label archive_button disable-on-edit">Trash</a>
		</div>
		{{/if}}
		{{#unless staging}}
		<div class="nav-button-container">
			<div class="nav-button permissions_button disable-on-edit"><span class="glyphicon glyphicon-user"></span></div>
			<a class="nav-label permissions_button disable-on-edit">Invite</a>
		</div>
		{{/unless}}
		{{#unless view_only}}
			{{#unless staging}}
				{{#if channel.staging_tree}}<a href="/channels/{{channel.id}}/staging">{{/if}}
				<div class="nav-button-container" {{#unless channel.staging_tree}}title="No updates to review from Ricecooker" disabled{{/unless}}>
					<div class="nav-button review_button disable-on-edit {{#unless channel.staging_tree}}disabled{{/unless}}"><span class="glyphicon glyphicon-ok-circle"></span></div>
					<a class="nav-label review_button disable-on-edit {{#unless channel.staging_tree}}disabled{{/unless}}">Review</a>
				</div>
				{{#if channel.staging_tree}}</a>{{/if}}
			{{/unless}}
		{{/unless}}
		{{#if staging}}
			<div class="nav-button-container" title="Summary of last Ricecooker run">
				<div class="nav-button stats_button disable-on-edit"><span class="glyphicon glyphicon-list-alt"></span></div>
				<a class="nav-label stats_button disable-on-edit">Summary</a>
			</div>
		{{/if}}
		<div class="hide-details-container">
			<input type="checkbox" id="hide_details_checkbox"/>
			<label for="hide_details_checkbox">Hide details</label>
		</div>
	</nav>
	{{#unless view_only}}
		{{#if channel.ricecooker_version}}
			<div id="ricecooker_header">
				{{#if staging}}
					These updates have not been deployed to the live channel. <b><a class="approve_channel">Deploy updated channel?</a></b>
				{{else}}
					This channel was created using <b><a href="https://github.com/learningequality/ricecooker" target="_blank">Ricecooker</a></b> v{{channel.ricecooker_version}} (@ {{channel.created}}). {{#if channel.staging_tree}}<b><a href="/channels/{{channel.id}}/staging">Updated content is available to review.</a></b>{{else}}Update content by running the Ricecooker again.{{/if}}
				{{/if}}
			</div>
		{{/if}}
	{{/unless}}
	<div id="container-wrapper">
		<ul id="container_area" class="list-unstyled">
		</ul>
	</div>
</div>