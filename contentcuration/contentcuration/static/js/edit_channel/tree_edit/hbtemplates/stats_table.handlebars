<div id="stats_table" class="table-striped container-fluid">
    <div class="row table-header">
        <div class="table-cell col-xs-3 text-center">Comparison</div>
        <div class="table-cell col-xs-3 text-center">Updated (Staged)</div>
        <div class="table-cell col-xs-3 text-center">Live (Current)</div>
        <div class="table-cell col-xs-3 text-center">Difference</div>
    </div>
    {{#each stats}}
        <div class="row table-row">
            <div class="table-cell col-xs-3 text-center">{{field}}</div>
            <div class="table-cell col-xs-3 text-center">{{#if format_size}}{{#format_file_size updated}}{{/format_file_size}}{{else}}{{updated}}{{/if}}</div>
            <div class="table-cell col-xs-3 text-center">{{#if format_size}}{{#format_file_size original}}{{/format_file_size}}{{else}}{{original}}{{/if}}</div>
            <div class="table-cell col-xs-3 text-center">
                {{#if difference}}
                    <span class="{{#ispositive difference}}positive{{else}}negative{{/ispositive}}">{{#ispositive difference}}+{{/ispositive}}{{#if format_size}}{{#format_file_size difference}}{{/format_file_size}}{{else}}{{difference}}{{/if}}</span>
                {{else}}---
                {{/if}}
            </div>
        </div>
    {{/each}}
</div>
