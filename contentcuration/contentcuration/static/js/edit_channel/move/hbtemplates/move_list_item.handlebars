{{#if is_target}}<input type="radio" id="move_item_{{node.id}}_check" class="move_checkbox" name="target_radio_list"></input>{{/if}}
<label for="move_item_{{node.id}}_check" class="move_item {{#if is_target}}dblclick_toggle{{else}}{{#if node.children}}tog_folder{{/if}}{{/if}}" title="{{node.title}}">
	{{#if has_descendants}}
		<div id="menu_toggle_{{node.id}}" class="tog_folder pull-right glyphicon glyphicon-triangle-top"></div>
	{{/if}}
	{{#unless isfolder}}<div class="glyphicon glyphicon-{{#get_icon node.kind}}{{/get_icon}}"></div>{{/unless}}
	<div class="move_item_title truncate">{{node.title}}</div>
	{{#if isfolder}}{{#unless has_descendants}}<em class="move_empty">(empty)</em>{{/unless}}{{/if}}
</label>

{{#if node.children}}
	<div id="move_item_{{node.id}}_sub" class="subdirectory"><em class="default-item">Loading...</em></div>
{{/if}}