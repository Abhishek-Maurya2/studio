{% load perseus_tags %}{% autoescape off %}{
    "question": {
        "content": "{{ question | escape_newline }}\n\n[[â˜ƒ radio 1]]",
        "images": {},
        "widgets": {
            "radio 1": {
                "type": "radio",
                "graded": true,
                "options": {
                    "choices": [
                        {% for answer in answers %}
                        {
                            "correct": {% if answer.correct %}true{% else %}false{% endif %},
                            "content": "{{ answer.answer | escape_newline }}"
                        }{% if forloop.last %}{% else %},{% endif %}
                        {% endfor %}
                    ],
                    "randomize": true,
                    "multipleSelect": {% if multipleSelect %}true{% else %}false{% endif %},
                    "displayCount": null,
                    "hasNoneOfTheAbove": false,
                    "onePerLine": true,
                    "deselectEnabled": false
                },
                "version": {
                    "major": 1,
                    "minor": 0
                }
            }
        }
    },
    "answerArea": {
        "type": "multiple",
        "options": {
            "content": "",
            "images": {},
            "widgets": {}
        },
        "calculator": false,
        "periodicTable": false
    },
    "itemDataVersion": {
        "major": 0,
        "minor": 1
    },
    "hints": [
        {% for hint in hints %}
        {
            "widgets":{},
            "images":{},
            "content":"{{hint.hint | escape_newline}}",
            "replace":false
        }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}
    ]
}
{% endautoescape %}