{% load perseus_tags %}{
    "question": {
        "content": "{{ question | escape_newline }}\n\n[[â˜ƒ free-text-input 1]]",
        "images": {},
        "widgets": {
             "free-text-input 1": {
                "type": "free-text-input",
                "alignment": "default",
                "graded": true,
                "options": {
                    "answers": [
                        {% if freeresponse %}
                        {
                            "value": null,
                            "status": "ungraded",
                            "message": "",
                            "answerForms": [],
                            "strict": false,
                            "maxError": null
                        }
                        {% else %}
                        {% for answer in answers %}
                        {
                            "value": "{{ answer.answer | escape_newline }}",
                            "status": "graded",
                            "message": "",
                            "answerForms": [],
                            "strict": false,
                            "maxError": null
                        }{% if forloop.last %}{% else %},{% endif %}
                        {% endfor %}
                        {% endif %}
                    ],
                    "cols": 50,
                    "rows": 10,
                    "coefficient": false,
                    "labelText": ""
                },
                "version": {
                    "major": 0,
                    "minor": 0
                }
            }
        }
    },
    "answerArea": {
        "type": "multiple",
        "options": {
            "content": "",
            "images": {},
            "widgets": {}
        },
        "calculator": false,
        "periodicTable": false
    },
    "itemDataVersion": {
        "major": 0,
        "minor": 1
    },
    "hints": [
        {% for hint in hints %}
        {
            "widgets":{},
            "images":{},
            "content":"{{hint.hint | escape_newline}}",
            "replace":false
        }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}
    ]
}
