{% load perseus_tags %}{
    "question": {
        "content": "{{ question | escape_newline }}\n\n[[â˜ƒ text-input 1]]",
        "images": {},
        "widgets": {
            "text-input 1": {
                "type": "text-input",
                "alignment": "default",
                "static": false,
                "graded": true,
                "options": {
                    "static": false,
                    "answers": [
                        {% for answer in answers %}
                        {
                            "value": "{{ answer.answer | escape_newline }}",
                            "status": "correct",
                            "message": "{{ answer.hint }}",
                            "simplify": "required",
                            "strict": false,
                            "maxError": null
                        }{% if forloop.last %}{% else %},{% endif %}
                        {% endfor %}
                    ],
                    "size": "normal",
                    "coefficient": false,
                    "labelText": ""
                },
                "version": {
                    "major": 0,
                    "minor": 0
                }
            }
        }
    },
    "answerArea": {
        "calculator": false,
        "chi2Table": false,
        "periodicTable": false,
        "tTable": false,
        "zTable": false
    },
    "itemDataVersion": {
        "major": 0,
        "minor": 1
    },
    "hints": [
        {% for hint in hints %}
        {
            "widgets":{},
            "images":{},
            "content":"{{hint | escape_newline}}",
            "replace":false
        }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}
    ]
}